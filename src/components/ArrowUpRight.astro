---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"span">;

const { class: className, ...props } = Astro.props;
---

<span class:list={[className]} {...props}
  ><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"
    ><path
      d="M196 64v104a4 4 0 0 1-8 0V73.66L66.83 194.83a4 4 0 0 1-5.66-5.66L182.34 68H88a4 4 0 0 1 0-8h104a4 4 0 0 1 4 4Z"
      fill="currentColor"></path></svg
  ></span
>

<style>
  span {
    align-items: center;
    border-radius: 50%;
    border: var(--border);
    color: var(--foreground);
    display: inline-flex;
    height: 2rem;
    justify-content: center;
    min-width: 2rem;
    width: 2rem;

    svg {
      display: inline-block;
      height: 1rem;
      width: 1rem;
    }
  }
</style>
