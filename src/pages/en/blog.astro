---
import DefaultLayout from "@/layouts/Default.astro";
import { getCollection } from "astro:content";
import Hero from "@/components/Hero.astro";
import Badge from "@/components/Badge.astro";
import InternalLink from "@/components/InternalLink.astro";

const posts = (await getCollection("blog"))
  .filter((post) => post.data?.draft !== true)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<DefaultLayout title="Blog">
  <Hero>
    <h1 class="title"><Badge class="hero-badge">Blog</Badge></h1>
    <p>or as I like to call it: <i>"Better write it down before I forget"</i>.</p>
    <p class="h2 display">
      Ideas, experiments, and unfiltered neural explosions. <b
        >I can't promise structure or conclusions</b
      >, but at least it's written.
    </p>
    <p>For now, this content is only in Spanish.</p>
    <InternalLink href="/blog">Read posts in Spanish</InternalLink>
  </Hero>
</DefaultLayout>

<style>
  .title {
    margin-bottom: 0;
  }

  .translate {
    background-color: var(--surface);
    border: var(--border);
    border-color: currentColor;
    border-radius: 0.25em;
    display: inline-block;
    height: 1.25em;
    vertical-align: middle;
    width: 1.25em;
  }
</style>
